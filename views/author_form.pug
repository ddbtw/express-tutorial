extends layout

block content
  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='first_name') Primeiro nome:
      input#first_name.form-control(type='text', placeholder='Primeiro nome (Joédio)' name='first_name' required='true' value=(undefined===author ? '' : author.first_name) )
      label(for='family_name') Sobrenome:
      input#family_name.form-control(type='text', placeholder='Sobrenome (Borges)' name='family_name' required='true' value=(undefined===author ? '' : author.family_name))
    div.form-group
      label(for='date_of_birth') Data de nascimento:
      input#date_of_birth.form-control(type='date', name='Data de nascimento' value=(undefined===author ? '' : author.date_of_birth_yyyy_mm_dd) )
    div.form-group
      label(for='date_of_death') Data de óbito:
      input#date_of_death.form-control(type='date', name='Data de óbito' value=(undefined===author ? '' : author.date_of_death_yyyy_mm_dd) )
    button.btn.btn-primary(type='submit') enviar

  if errors
    ul
      for error in errors
        li!= error.msg