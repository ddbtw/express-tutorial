extends layout

block content
  style.
    body {
      background-color: #f2f2f2;
      font-family: Arial, sans-serif;
      color: #333;
    }

    h1 {
      color: #3498db;
    }

    h2 {
      color: #e74c3c;
    }

    pre {
      background-color: #ecf0f1;
      border: 1px solid #ccc;
      padding: 10px;
      overflow-x: auto;
      color: #333;
    }

  h1= message
  h2= error.status
  pre #{error.stack}
