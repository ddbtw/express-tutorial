extends layout

block content


  h1 Gênero: #{genre.name}

  div
    h4 Livros

    dl
    each book in genre_books
      dt
        a(href=book.url) #{book.title}
      dd #{book.summary}

    else
      p Não há livros cadastrados nesse gênero.

  hr
  p
    a(href=genre.url+'/delete') Apagar gênero
  p
    a(href=genre.url+'/update') Atualizar gênero
